        <td width="26%"><%= raw Pygments.highlight(gist.snippet.length > 50 ? gist.snippet[0,50] + "..." : gist.snippet, lexer: gist.lang) %></td>
        <td width="16%"><%= gist.lang %></td>
        <td width="16%"><%= gist.description %></td>
